<div class="hero-unit">
  <h2 class="title"><%= badge.title %></h2>
  <%- linkTo('Edit this badge', editBadgePath(params.id), {class: 'btn pull-right'}); %>
</div>

<h2>Badge Properties</h2>
<% for(var i in badge) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= badge[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>