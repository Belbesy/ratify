<div class="hero-unit">
  <h2 class="id"><%= nominatedBadge.id %></h2>
  <%- linkTo('Edit this nominatedBadge', editNominatedBadgePath(params.id), {class: 'btn pull-right'}); %>
</div>

<h2>NominatedBadge Properties</h2>
<% for(var i in nominatedBadge) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= nominatedBadge[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>